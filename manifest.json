{
  "name": "Coolenglish Fix",
  "description": "버그좀 고쳐라",
  "version": "1.2.0",
  "manifest_version": 3,
  "permissions": ["scripting", "storage", "unlimitedStorage"],
  "content_scripts": [
    {
      "matches": [
        "https://coolenglish.co.kr/*",
        "https://www.coolenglish.co.kr/*"
      ],
      "js": ["fixer__.js"],
      "all_frames": true
    },
    {
      "matches": [
        "https://www.coolenglish.co.kr/study/*",
        "https://coolenglish.co.kr/study/*"
      ],
      "js": ["multiple_windows__.js"]
    },
    {
      "matches": [
        "https://www.coolenglish.co.kr/main/",
        "https://coolenglish.co.kr/main/"
      ],
      "js": ["open_study_page_in_an_old_window__.js"]
    }
  ],
  "icons": {
    "128": "/images/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fixer.js",
        "toastr.min.js",
        "multiple_windows.js",
        "open_study_page_in_an_old_window.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
